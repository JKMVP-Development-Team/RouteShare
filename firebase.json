{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "database": "(default)",
    "location": "nam5",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
    "emulators": {
      "functions": {
        "port": 5001,
        "host": "0.0.0.0" 
      },
      "firestore": {
        "port": 8082,
        "host": "0.0.0.0" 
      },
      "ui": {
        "enabled": true,
        "port": 4000,
        "host": "0.0.0.0" 
      },
      "auth": {
        "port": 9099,
        "host": "0.0.0.0" 
      },
    "singleProjectMode": true
  }
}
